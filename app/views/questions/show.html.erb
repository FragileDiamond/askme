<div class="container">
    <h2 class="title-lg mb">Вопрос <%= @question.id %></h2>

    <%= content_tag :p, class: "mb-sm" + (@question.hidden? ? " hidden" : '') do %>
        <%= @question.body %>
    <% end %>

    <p>user_id: <b><%= @question.user_id %></b></p>

    <div class="mt">
      <%= link_to fa_icon('pencil'), edit_question_path(@question),
        title: 'Изменить вопрос' %>
      <%= button_to fa_icon('trash'), question_path(@question),
        method: :delete, title: 'Удалить вопрос',
        form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>
      <% unless @question.hidden? %>
        <%= button_to fa_icon('eye-slash'), hide_question_path(@question), method: :put, title: 'Спрятать вопрос' %>
      <% end %>
    </div>

    <p class="mt"><%= link_to "Все вопросы", questions_path %></p>
</div>
